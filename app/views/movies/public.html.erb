<div id="main" class="m-scene">
	<div class="m-aside scene_element scene_element--fadein">

		<table class="table table-hover table-condensed tablesorter"  id="keywords myTable">
			<thead>
			<tr>
				<th class="tablehead">Title</th>
				<th class="tablehead">Release Year</th>
				<th class="tablehead">Length</th>
				<th class="tablehead">Format</th>
				<th class="tablehead">Rating</th>
			</tr>
			</thead>
			<tbody>
			<% @movies.each do |movie| %>
			<tr>
				<td><%= movie.title %></td>
				<td><%= movie.release_year %></td>
				<td><%= movie.length/60 %> hr <%= movie.length%60 %> min</td>
				<td><%= movie.format %></td>
				<td><%= movie.rating %></td>
			</tr>
			<% end %>
			</tbody>
		</table>

	</div>
</div>